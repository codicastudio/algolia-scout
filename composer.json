{
    "name": "codicastudio/algoliascout",
    "description": "A noobs worthless garbage, just learning.",
    "keywords": [
        "worthless garabage by a noob."
    ],
    "homepage": "https://github.com/codicastudio/algoliascout",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael J Brown",
            "email": "mbrown@codicastudio.com",
            "homepage": "https://codicastudio.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "algolia/algoliasearch-client-php": "^2.5.1",
        "illuminate/console": "^8.0",
        "illuminate/contracts": "^8.0",
        "illuminate/database": "^8.0",
        "illuminate/filesystem": "^8.0",
        "illuminate/support": "^8.0",
        "laravel/legacy-factories": "^1.0",
        "laravel/scout": "^8.0",
        "riimu/kit-phpencoder": "^2.4"
    },
    "suggest": {
        "ext-dom": "Required to use the HTML Splitter."
    },
    "require-dev": {
        "fzaninotto/faker": "^1.8",
        "mockery/mockery": "^1.1",
        "orchestra/testbench": "^4.0|^5.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "tests/laravel/app"
        },
        "files": [
            "vendor/mockery/mockery/library/helpers.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Algolia\\ScoutExtended\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Algolia\\ScoutExtended\\ScoutExtendedServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "phpstan:test": "phpstan analyse --ansi --memory-limit=-1",
        "phpunit:test": "phpunit --colors=always",
        "test": [
            "@phpstan:test",
            "@phpunit:test"
        ]
    }
}
